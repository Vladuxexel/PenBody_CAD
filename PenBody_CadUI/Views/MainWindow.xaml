<Window x:Class="PenBody_CadUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenBody_CadUI"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Views/Pen.ico"
        ResizeMode="NoResize"
        Title="Корпус пишущей ручки" Height="350" Width="330" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary Source="CadStyles.xaml"/>
    </Window.Resources>
    <DockPanel Background="#c4c4c4">
        <DockPanel.Resources>
            <BooleanToVisibilityConverter x:Key="IsVisible"/>
        </DockPanel.Resources>
        <TextBlock DockPanel.Dock="Top"
                   HorizontalAlignment="Center"
                   Text="Параметры построения"
                   Padding="0 5 0 0"
                   Height="30"
                   FontSize="17" FontWeight="Black"/>
        <StackPanel DockPanel.Dock="Bottom"
                    Visibility="{Binding IsProgressVisible, 
                                    Converter={StaticResource IsVisible}, 
                                    UpdateSourceTrigger=PropertyChanged}">
            <TextBlock Text="Запуск Компаса..."/>
            <ProgressBar
                     Minimum="0" Maximum="100" 
                     Height="10"
                     IsIndeterminate="True"/>
        </StackPanel>        
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.45*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Длина основной части (мм):"/>
                    <TextBox Grid.Column="1" Grid.Row="0" 
                             Text="{Binding MainLength, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Длина части для резинки (мм):"/>
                    <TextBox Grid.Column="1" Grid.Row="1"
                             Text="{Binding RubberLength, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Диаметр (мм):"/>
                    <TextBox Grid.Column="1" Grid.Row="2"
                             Text="{Binding MainDiameter, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Внутренний диаметр (мм):"/>
                    <TextBox Grid.Column="1" Grid.Row="3"
                             Text="{Binding InnerDiameter, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Grid.Column="0" Grid.Row="4" Text="Диаметр части для резинки (мм):"/>
                    <TextBox Grid.Column="1" Grid.Row="4"
                             Text="{Binding RubberDiameter, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>
            <Button Grid.Row="1" Content="Сбросить" HorizontalAlignment="Left"
                    Command="{Binding ResetCommand}"/>
            <Button Grid.Row="1" Content="Построить" HorizontalAlignment="Right"
                    Command="{Binding BuildCommand}"/>
        </Grid>
    </DockPanel>
</Window>
